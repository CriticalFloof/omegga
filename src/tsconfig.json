{
  "compilerOptions": {
    "allowJs": false,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "@omegga/*": [
        "./omegga/*"
      ],
      "@cli/*": [
        "./cli/*"
      ],
      "@util/*": [
        "./util/*"
      ],
      "@util": [
        "./util/index.ts"
      ],
      "@webserver/*": [
        "./webserver/*"
      ],
      "@brickadia/*": [
        "./brickadia/*"
      ],
      "@config/*": [
        "./config/*"
      ],
      "@config": [
        "./config/index.ts"
      ],
      "@/*": [
        "./*"
      ],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      },
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ],
    "skipLibCheck": true,
    "module": "commonjs",
    "moduleResolution": "node",
    // "noImplicitAny": true,
    "esModuleInterop": true,
    // "strict": true,
    "resolveJsonModule": true,
    "outDir": "../dist",
    "sourceMap": true,
    "declaration": true,
    "target": "es2017",
    "types": [
      "node"
    ],
    "typeRoots": [
      "./index.d.ts",
      "node_modules/@types",
    ],
    // "watch": true
  },
  "exclude": [
    "./webserver/frontend",
  ],
  "tsc-alias": {
    "replacers": {
      "base-url": {
        "enabled": false
      }
    }
  }
}