{
    "type": "object",
    "title": "Config",
    "description": "The root config comprises the entire config document.",
    "default": {
        "credentials": {},
        "server": {}
    },
    "examples": [
        {
            "credentials": {
                "email": "user@example.com",
                "password": "s3cur3p4ssw0rd!"
            },
            "server": {
                "name": "Brickadia Server",
                "port": 7777,
                "description": "Join Now",
                "welcomeMessage": "Welcome, {1}",
                "password": "",
                "players": 20,
                "publiclyListed": true
            }
        }
    ],
    "required": [
        "credentials",
        "server"
    ],
    "additionalProperties": false,
    "properties": {
        "credentials": {
            "type": "object",
            "title": "Credentials",
            "description": "Contains authentication information for the host.",
            "default": {},
            "examples": [
                {
                    "email": "user@example.com",
                    "password": "s3cur3p4ssw0rd!"
                }
            ],
            "required": [
                "email"
            ],
            "additionalProperties": false,
            "properties": {
                "email": {
                    "type": "string",
                    "title": "Host Email",
                    "description": "Email of host. Same as the one used to sign into brickadia.com.",
                    "default": "",
                    "examples": [
                        "user@example.com",
                        "ingamename@gmail.com"
                    ]
                },
                "password": {
                    "type": "string",
                    "title": "Host Password",
                    "description": "Password of host. Same as the one used to sign into brickadia.com. Automatically removed once sign-in is completed.",
                    "default": "",
                    "examples": [
                        "s3cur3p4ssw0rd!"
                    ]
                }
            }
        },
        "server": {
            "type": "object",
            "title": "Server Configuration",
            "description": "Brickadia Server Configurations. Overwrite in-game set configs every time server is started.",
            "default": {},
            "examples": [
                {
                    "name": "Brickadia Server",
                    "port": 7777,
                    "description": "Hello!",
                    "welcomeMessage": "Welcome, {1}!",
                    "password": "letmein",
                    "players": 20,
                    "publiclyListed": true
                }
            ],
            "required": [
                "name"
            ],
            "additionalProperties": true,
            "properties": {
                "name": {
                    "type": "string",
                    "title": "Server Name",
                    "description": "Server name as displayed in the in-game server list and on brickadia.com.",
                    "default": "Brickadia Server",
                    "examples": [
                        "Brickadia Server",
                        "Freebuild",
                        "Deathmatch"
                    ]
                },
                "port": {
                    "type": "integer",
                    "title": "Server Port",
                    "description": "The UDP Port the server is listening on.",
                    "default": 7777,
                    "minimum": 0,
                    "maximum": 65535,
                    "examples": [
                        7777,
                        7778
                    ]
                },
                "description": {
                    "type": "string",
                    "title": "Server Description",
                    "description": "Hovertext as displayed in the in-game server list and text description on brickadia.com",
                    "default": "",
                    "examples": [
                        "Hello!"
                    ]
                },
                "welcomeMessage": {
                    "type": "string",
                    "title": "Server Welcome Message",
                    "description": "Text displayed to players when they join the server. Also known as a MOTD (Message of the day)",
                    "default": "",
                    "examples": [
                        "Welcome, {1}",
                        "<color=\\\"0055ff\\\">Welcome to <b>{2}</>, {1}.</>"
                    ]
                },
                "password": {
                    "type": "string",
                    "title": "Server Password",
                    "description": "Password required for server entry.",
                    "default": "",
                    "examples": [
                        "letmein"
                    ]
                },
                "players": {
                    "type": "integer",
                    "title": "Max Players",
                    "description": "The maximum number of players allowed on the server.",
                    "default": 20,
                    "minimum": 1,
                    "maximum": 50,
                    "examples": [
                        10,
                        20,
                        50
                    ]
                },
                "publiclyListed": {
                    "type": "boolean",
                    "title": "Server Publicly Listed",
                    "description": "When enabled, server is displayed in the in-game server list and on brickadia.com.",
                    "default": true,
                    "examples": [
                        true
                    ]
                }
            }
        }
    }
}